<script>
    
    // JavaScript

    var opciones = [];

    function agregarOpcion() {
        var nomColor = document.getElementById('nombreColorHidden').value.trim();
        var tallasStock = document.getElementById('tallasStock').value.trim();
        var colorExa = document.getElementById('exaColorHidden').value.trim();

        var entradas = tallasStock.split(',');
        var tallas = [];

        entradas.forEach(function(entrada) {
            var partes = entrada.split(':');
            var talla = partes[0].trim();
            var stock = parseInt(partes[1].trim());
            tallas.push({ talla: talla, stock: stock });
        });

        var opcion = { color: {codHexadecimal: colorExa, nombreColor: nomColor }, tallas: tallas };
        opciones.push(opcion);

        actualizarFormulario();
        document.getElementById('opcionesInput').value = JSON.stringify(opciones);
    }

    function borrarOpcion(index) {
        opciones.splice(index, 1);
        actualizarFormulario();
        document.getElementById('opcionesInput').value = JSON.stringify(opciones);
    }

    function actualizarFormulario() {
        var opcionesContainer = document.getElementById('opcionesContainer');
        opcionesContainer.innerHTML = '';

        opciones.forEach(function(opcion, index) {
            var div = document.createElement('div');
            div.innerHTML = `
                <div>
                    <strong>Color:</strong> ${opcion.color.nombreColor}
                    <br>
                    <strong>Tallas:</strong> ${opcion.tallas.map(function(t) { return `${t.talla}: ${t.stock}`; }).join(', ')}
                    <button type="button" onclick="borrarOpcion(${index})">Borrar</button>
                </div>
                <hr>
            `;
            opcionesContainer.appendChild(div);
        });
    }

    function actualizarCampoTexto() {
        var nombreColorSelect = document.getElementById('nombreColorSelect');
        var nombreColorHidden = document.getElementById('nombreColorHidden');
        var exaColorHidden = document.getElementById('exaColorHidden');

        // Obtener el valor seleccionado en la lista desplegable
        var selectedValue = nombreColorSelect.value;
        var hexValue = nombreColorSelect.options[nombreColorSelect.selectedIndex].dataset.hex;

        // Actualizar el campo de entrada de texto oculto con el valor seleccionado
        nombreColorHidden.value = selectedValue;
        exaColorHidden.value = hexValue;
    }
    console.log(opciones)
    //console.log(ListColores)
</script>

